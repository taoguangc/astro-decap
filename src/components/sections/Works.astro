---
import Image from '@/components/Image.astro'
import work01 from '@/assets/img/work01.webp'
import work02 from '@/assets/img/work02.webp'
import work03 from '@/assets/img/work03.webp'
import work04 from '@/assets/img/work04.webp'
import work05 from '@/assets/img/work05.webp'
import work06 from '@/assets/img/work06.webp'
---

<section class="worksWrapper overflow-hidden py-24">
  <div class="works flex w-[300vw] flex-row flex-nowrap justify-start gap-16 px-16 lg:px-24">
    <div class="workitem w-1/2">
      <Image src={work01} alt="work01" class="mb-8" />
      <div class="flex flex-row justify-between">
        <div>
          <p>WEB DESIGN</p>
          <h3 class="text-2xl font-semibold">Color Intergration</h3>
        </div>
        <time class="text-xl font-semibold">2023</time>
      </div>
    </div>
    <div class="workitem w-1/2">
      <Image src={work02} alt="work02" class="mb-8" />
      <div class="flex flex-row justify-between">
        <div>
          <p>WEBSITE BUILD</p>
          <h3 class="text-2xl font-semibold">Color Intergration</h3>
        </div>
        <time class="text-xl font-semibold">2023</time>
      </div>
    </div>
    <div class="workitem w-1/2">
      <Image src={work03} alt="work03" class="mb-8" />
      <div class="flex flex-row justify-between">
        <div>
          <p>CODING</p>
          <h3 class="text-2xl font-semibold">Color Intergration</h3>
        </div>
        <time class="text-xl font-semibold">2023</time>
      </div>
    </div>
    <div class="workitem w-1/2">
      <Image src={work04} alt="work04" class="mb-8" />
      <div class="flex flex-row justify-between">
        <div>
          <p>WEB DEVELOPE</p>
          <h3 class="text-2xl font-semibold">Color Intergration</h3>
        </div>
        <time class="text-xl font-semibold">2023</time>
      </div>
    </div>
    <div class="workitem w-1/2">
      <Image src={work05} alt="work05" class="mb-8" />
      <div class="flex flex-row justify-between">
        <div>
          <p>WEB DESIGN</p>
          <h3 class="text-2xl font-semibold">Color Intergration</h3>
        </div>
        <time class="text-xl font-semibold">2023</time>
      </div>
    </div>
    <div class="workitem w-1/2">
      <Image src={work06} alt="work06" class="mb-8" />
      <div class="flex flex-row justify-between">
        <div>
          <p>WEB DEVELOPE</p>
          <h3 class="text-2xl font-semibold">Color Intergration</h3>
        </div>
        <time class="text-xl font-semibold">2023</time>
      </div>
    </div>
  </div>
</section>

<script>
  let sections = gsap.utils.toArray('.workitem')
  gsap.to(sections, {
    xPercent: -50 * (sections.length + 3),
    ease: 'none',
    scrollTrigger: {
      trigger: '.works',
      pin: true,
      scrub: 1,
      // snap: 1 / (sections.length - 1),
      start: 'top 15%',
      end: '+=3500',
      // markers: true,
    },
  })
  ScrollTrigger.refresh()
</script>
